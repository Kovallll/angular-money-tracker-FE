{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "newProjectRoot": "projects",
  "projects": {
    "first-app": {
      "projectType": "application",
      "schematics": {
        "@schematics/angular:component": {
          "inlineTemplate": true,
          "inlineStyle": true,
          "style": "scss",
          "skipTests": true,
          "changeDetection": "OnPush",
          "standalone": true
        },
        "@schematics/angular:class": {
          "skipTests": true
        },
        "@schematics/angular:directive": {
          "skipTests": true
        },
        "@schematics/angular:guard": {
          "skipTests": true
        },
        "@schematics/angular:interceptor": {
          "skipTests": true
        },
        "@schematics/angular:pipe": {
          "skipTests": true
        },
        "@schematics/angular:resolver": {
          "skipTests": true
        },
        "@schematics/angular:service": {
          "skipTests": true
        }
      },
      "root": "",
      "sourceRoot": "src",
      "prefix": "",
      "architect": {
        "build": {
          "builder": "@angular/build:application",
          //"builder": "@angular-builders/custom-webpack:browser",
          "options": {
            "outputPath": "dist/first-app",
            "index": "src/index.html",
            //"main": "src/main.single-spa.ts",
            "polyfills": ["zone.js"],
            "tsConfig": "tsconfig.app.json",
            "inlineStyleLanguage": "scss",
            "assets": [
              "src/assets",
              {
                "glob": "**/*",
                "input": "node_modules/primeicons/fonts",
                "output": "/assets/primeicons/fonts"
              }
            ],
            "stylePreprocessorOptions": {
              "includePaths": ["src"]
            },
            "styles": ["src/styles.scss"],
            "scripts": [],

            // "customWebpackConfig": {
            //   "path": "extra-webpack.config.js",
            //   "libraryName": "first-app",
            //   "libraryTarget": "umd",
            //   "output": {
            //     "publicPath": "http://localhost:4200/"
            //   }
            // },
            "deployUrl": "http://localhost:4200/"
          },
          "configurations": {
            "spa": {
              "fileReplacements": [
                {
                  "replace": "src/environments/environment.ts",
                  "with": "src/environments/environment.spa.ts"
                }
              ]
            },
            "production": {
              "budgets": [
                {
                  "type": "initial",
                  "maximumWarning": "500kb",
                  "maximumError": "3mb"
                },
                {
                  "type": "anyComponentStyle",
                  "maximumWarning": "100kb",
                  "maximumError": "300kb"
                }
              ],
              "outputHashing": "none"
            },
            "development": {
              "optimization": false,
              "extractLicenses": false,
              "sourceMap": true,
              "outputHashing": "none"
            }
          },
          "defaultConfiguration": "production"
        },
        "serve": {
          //"builder": "@angular-builders/custom-webpack:dev-server",
          "builder": "@angular/build:dev-server",
          "configurations": {
            "production": {
              "buildTarget": "first-app:build:production"
            },
            "development": {
              "buildTarget": "first-app:build:development"
            },
            "spa": {
              "buildTarget": "first-app:build:spa"
            }
          },
          "defaultConfiguration": "development"
        },
        "extract-i18n": {
          "builder": "@angular/build:extract-i18n",
          "options": {
            "buildTarget": "first-app:build"
          }
        },
        "lint": {
          "builder": "@angular-eslint/builder:lint",
          "options": {
            "lintFilePatterns": ["src/**/*.ts", "src/**/*.html"],
            "eslintConfig": "eslint.config.js"
          }
        }
      }
    }
  },
  "cli": {
    "analytics": false
  }
}
